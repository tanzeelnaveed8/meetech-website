// This is your Prisma schema file for MongoDB
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Models
model Lead {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId

  // Contact Information
  name          String
  email         String
  phone         String?
  company       String?
  projectType   String
  message       String
  fileUrl       String?

  // Source Tracking
  utmSource     String?
  utmMedium     String?
  utmCampaign   String?
  referrerUrl   String?
  landingPage   String
  deviceType    String
  ipAddress     String?

  // Lead Management
  status        String      @default("NEW") // NEW, CONTACTED, QUALIFIED, IN_PROGRESS, CONVERTED, LOST
  assignedToId  String?     @db.ObjectId
  assignedTo    User?       @relation(fields: [assignedToId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  // Compliance
  consentGiven  Boolean     @default(false)
  consentAt     DateTime?

  // Timestamps
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  notes         LeadNote[]
}

model LeadNote {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  leadId    String    @db.ObjectId
  lead      Lead      @relation(fields: [leadId], references: [id], onDelete: Cascade)

  authorId  String    @db.ObjectId
  author    User      @relation(fields: [authorId], references: [id])

  note      String

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model AnalyticsEvent {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId

  // Event Details
  eventType   String
  eventData   Json

  // Page Context
  pageUrl     String
  pagePath    String
  pageTitle   String?

  // Session Context
  sessionId   String
  userId      String?

  // Device Context
  deviceType  String
  browser     String?
  os          String?

  // Timestamp
  timestamp   DateTime @default(now())
}

model UserSession {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  sessionId   String    @unique

  // Journey
  entryPage   String
  exitPage    String?
  pageViews   Int       @default(1)

  // Duration
  startedAt   DateTime  @default(now())
  endedAt     DateTime?
  duration    Int?

  // Context
  deviceType  String
  location    String?
  referrer    String?
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId

  // Authentication
  email         String    @unique
  passwordHash  String

  // Profile
  name          String
  role          String    @default("EDITOR") // ADMIN, EDITOR, VIEWER, CLIENT

  // Status
  isActive      Boolean   @default(true)
  lastLoginAt   DateTime?

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  assignedLeads       Lead[]
  leadNotes           LeadNote[]
  clientProjects      Project[] @relation("ClientProjects")
  managedProjects     Project[] @relation("ManagedProjects")
  uploadedFiles       ProjectFile[]
  changeRequests      ChangeRequest[]
}

model Project {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId

  // Basic Info
  name            String
  description     String
  scope           String

  // Status & Progress
  status          String    @default("PLANNING") // PLANNING, IN_PROGRESS, ON_HOLD, COMPLETED, CANCELLED
  progress        Int       @default(0) // 0-100

  // Relations
  clientId        String    @db.ObjectId
  client          User      @relation("ClientProjects", fields: [clientId], references: [id], onDelete: Cascade)

  managerId       String    @db.ObjectId
  manager         User      @relation("ManagedProjects", fields: [managerId], references: [id])

  // Timeline
  startDate       DateTime?
  expectedEndDate DateTime?
  actualEndDate   DateTime?

  // Timestamps
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  milestones      Milestone[]
  files           ProjectFile[]
  changeRequests  ChangeRequest[]
  payments        Payment[]

  @@index([clientId])
  @@index([managerId])
  @@index([status])
}

model Milestone {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId

  // Basic Info
  title           String
  description     String
  status          String    @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED, BLOCKED
  order           Int       @default(0)

  // Timeline
  expectedDate    DateTime?
  completedDate   DateTime?

  // Relations
  projectId       String    @db.ObjectId
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([projectId])
}

model ProjectFile {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId

  // File Info
  fileName        String
  fileUrl         String
  fileSize        Int
  fileType        String
  category        String    @default("GENERAL") // GENERAL, DESIGN, DOCUMENT, CODE, OTHER

  // Metadata
  description     String?
  uploadedById    String    @db.ObjectId
  uploadedBy      User      @relation(fields: [uploadedById], references: [id])

  // Relations
  projectId       String    @db.ObjectId
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([projectId])
}

model ChangeRequest {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId

  // Request Info
  title           String
  message         String
  status          String    @default("PENDING") // PENDING, APPROVED, REJECTED, IN_REVIEW

  // Admin Response
  adminResponse   String?
  reviewedAt      DateTime?

  // Relations
  projectId       String    @db.ObjectId
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  clientId        String    @db.ObjectId
  client          User      @relation(fields: [clientId], references: [id])

  // Timestamps
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([projectId])
  @@index([clientId])
  @@index([status])
}

model Payment {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId

  // Payment Info
  amount          Float
  currency        String    @default("USD")
  description     String
  status          String    @default("PENDING") // PENDING, PAID, OVERDUE, CANCELLED

  // Timeline
  dueDate         DateTime
  paidDate        DateTime?

  // Relations
  projectId       String    @db.ObjectId
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([projectId])
  @@index([status])
}
